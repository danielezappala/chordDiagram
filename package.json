{
  "name": "chord-diagram-library",
  "version": "0.1.0",
  "description": "A React library for beautiful and customizable chord diagrams",
  "type": "module",
  "main": "./dist/chord-diagram-library.umd.js",
  "module": "./dist/chord-diagram-library.es.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src/types.ts"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "prepublishOnly": "npm run build",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "react",
    "chord",
    "diagram",
    "guitar",
    "music",
    "chord-chart"
  ],
  "author": "danielezappala <danielezappala@scenariopubblico.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tuoutente/chord-diagram-library"
  },
  "homepage": "https://github.com/tuoutente/chord-diagram-library#readme",
  "bugs": {
    "url": "https://github.com/tuoutente/chord-diagram-library/issues"
  },
  "dependencies": {
    "tailwind-scrollbar": "^4.0.2",
    "zod": "^3.25.28"
  },
  "peerDependencies": {
    "framer-motion": "^10.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^8.56.0",
    "@tailwindcss/forms": "^0.5.7",
    "@types/node": "^22.15.29",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.5.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.1.7",
    "typescript": "^5.2.2",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4"
  },
  "exports": {
    ".": {
      "import": "./dist/chord-diagram-library.es.js",
      "require": "./dist/chord-diagram-library.umd.js",
      "types": "./dist/index.d.ts"
    },
    "./style.css": "./dist/style.css"
  }
}
