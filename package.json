{
  "name": "music-chords-diagrams",
  "version": "0.1.0",
  "description": "A React library for beautiful and customizable chord diagrams",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/chord-diagram-library.umd.cjs",
  "module": "./dist/chord-diagram-library.js",
